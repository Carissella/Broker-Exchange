
<body>
    <form class="w3-container w3-margin">
        <h2 class="w3-center create-acc-header">Create An Account</h2>
         
        <div class="w3-row w3-section">
          <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user create-card"></i></div>
            <div class="w3-rest">
              <input class="w3-input w3-border create-input" name="email" type="text" id="email-signup" placeholder="Email">
            </div>
        </div>
        
        <div class="w3-row w3-section">
          <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
            <div class="w3-rest">
              <input class="w3-input w3-border create-input" name="username" type="text" id="username-signup" placeholder="Username">
            </div>
        </div>
        
        <div class="w3-row w3-section">
          <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
            <div class="w3-rest">
              <input class="w3-input w3-border create-input" name="password" type="text" id="password-signup" placeholder="Password">
            </div>
        </div>
        
        <button class="w3-button w3-block w3-section w3-padding w3-round-xxlarge create-button" id="signup-form">Create Account</button>
        </form>

      
        <div class="w3-container w3-center">
            <button onclick="document.getElementById('id01').style.display='block'" class="w3-button w3-block w3-section w3-padding w3-round-xxlarge create-button">Already A User? Click Here!</button>
          
        <div id="id01" class="w3-modal modal-background">
          <div class="w3-modal-content w3-card-4 w3-animate-zoom card" style="max-width:600px">
            <div class="w3-center"><br>
              <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-xlarge w3-display-topright close-modal" title="Close Modal">&times;</span>
              <img src="brokerexchange.img" alt="Broke(er) Exchange" style="width:30%" class="w3-circle w3-margin-top modal-img">
            </div>
            <form class="w3-container">
              <div class="w3-section">
                <label><b class="orange">Username</b></label>
                <input class="w3-input w3-border w3-margin-bottom login-input" type="text" id="username-login" placeholder="Enter Username" name="usrname" required>
                <label><b class="orange">Password</b></label>
                <input class="w3-input w3-border login-input" type="password" id="password-login" placeholder="Enter Password" name="psw" required>
                <button class="w3-button w3-block w3-green w3-section w3-padding login-button" id="login-form" type="submit">Login</button>
              </div>
              <div class="w3-container w3-padding-16 black">
                <span class="w3-right w3-hide-small orange">
                <input class="w3-check " type="checkbox" checked="checked "> Remember me
                </span>
              </div>
            </form>
          </div>
        </div>
      </div>
        <script src="./js/login.js"></script>
</body>


